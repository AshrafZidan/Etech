<!--
  Generated template for the CartPage page.

  See http://ionicframework.com/docs/components/#navigation for more info on
  Ionic pages and navigation.
-->
<ion-header>

  <ion-navbar (click)="back()">
    <ion-icon class="back-icon"  name="ios-arrow-round-back-outline"></ion-icon>

    <ion-title class="page-title">
      <p class="page-name "> Cart
      </p>
    </ion-title>
  </ion-navbar>


</ion-header>


<ion-content padding>





  <div *ngIf="cartArray.length == 0">

    <div class="cart-empty text-center text-capitalize">
      <div class="cart-image">

        <!-- <ion-icon class="cart-icon" name="cart"></ion-icon> -->
        <img class="cart-icon" src="assets/icon/cart.jpg" alt="cart">
      </div>
      <h3 class="cart-title"> your cart is empty</h3>
    </div>

    <button ion-button block type="submit"
    (click)="back()"
    class=" sub fixed-botom app-white app-btn-revese animated fadeInDown">continue shopping</button>
  </div>




  <div *ngIf="cartArray.length !=0" class="content">


    <div class="item animated fadeInDown" *ngFor="let cart of cartArray ; let itemIndex = index">
      <ion-grid style="padding: 0">
        <ion-row class="product-box">
          <ion-col col-4>


            <div *ngIf="cart.images.length != 0 ">
              <img class="img-fluid text-left product-img" src="{{cart.images[0] }}" alt="item">
            </div>

            <img *ngIf="cart.images.length == 0" class="img-fluid i text-center product-img" src='https://via.placeholder.com/100x100'  alt="image"> 

          </ion-col>
          <ion-col col-8>

            <div class="details">
              <h5 class="text-capitalize brand text-left">{{cart.name}}</h5>
              <h4 class="description"> {{cart.desc}} </h4>
              <h5 class="price bold"> {{cart.price}}
                  <span >{{currentSymbol}}</span>
                  
                
                </h5>
            </div>

          </ion-col>


        </ion-row>
      </ion-grid>




      <div class="btns" >
        <ion-row >

          <ion-col col-6 class="qty">
            <ion-row >

              <!-- <span>Qty</span> -->
              <ion-col col-6 class="qty-label-col">
                <ion-label stacked class="qty-label">Qty : </ion-label>

              </ion-col>
              <!-- <ion-icon (click)="increment()" ios="ios-add-circle" md="md-add-circle"></ion-icon> -->


              <ion-col class="qty-col" col-6>
                <!--<ion-icon class="remove-icon" (click)="decrement()" name="remove"></ion-icon>-->
                <img class="remove-icon" (click)="decrement(itemIndex)" src="assets/icon/minus.png">

                <ion-input class="qty-inpt" disabled value={{allQuentity[itemIndex]}} type="number" min=1>
                  <!-- Advanced: explicity set the icon for each platform -->

                </ion-input>



                <!--<ion-icon class="add-icon" (click)="increment()" name="ios-add"></ion-icon>-->
                <img class="adds-icon" (click)="increment(itemIndex)" src="assets/icon/Plus.png">


              </ion-col>


            </ion-row>
          </ion-col>


          <ion-col col-6 class="col-7 text-center wish-col">
            <ion-row>
              <ion-col col-8 class="col-7">
                <button class="wish-btn" (click)="addWihes(cart)">Move To Wish List</button>
              </ion-col>

              <ion-col col-4 class="col-7">
                <button (click)="removeCart(cart.id,itemIndex)">Remove</button>
              </ion-col>

            </ion-row>
          </ion-col>




        </ion-row>
      </div>
      <!-- end butns -->
    </div>
    <!-- end itme -->





    <div class="check-out fixed-botom">
      <div class="total">
        <p class="subtotal"> Subtotal
          <span>({{cartArray.length}} items)</span>
        </p>
        <p class="pricer">{{total_Prices}} 
            <span >{{currentSymbol}}</span>
        </p>
      </div>
      <button ion-button block clear type="button" (click)="goToAddressPage('ShipAddressPage')"
       class="animated fadeInDown app-white app-btn-revese">checkout</button>
    </div>

  </div>

</ion-content>
