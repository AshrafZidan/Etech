  Ionic pages and navigation.
-->
<ion-header>

  <ion-navbar>
    <ion-icon class="back-icon" (click)="back()" name="ios-arrow-round-back-outline"></ion-icon>

    <ion-title class="page-title">
      <p class="page-name "> profile
      </p>
    </ion-title>
  </ion-navbar>


</ion-header>


<ion-content padding>
  <form [formGroup]="myForm" (ngSubmit)="updateUserProfileData()">

    <ion-list>

      <!-- fullName field -->
      <ion-item class="item1 animated fadeInDown">
        <ion-label stacked>
          first Name
        </ion-label>
        <ion-input class="inpt" type="text"  formControlName="firstname" [(ngModel)]="FirstName" required></ion-input>
      </ion-item>
      <p style="color: red" class="validationHint" *ngIf="hasError('firstname', 'required')">{{ 'require' | translate }}</p>
      <p style="color: red" class="validationHint" *ngIf="hasError('firstname', 'maxlength')">{{ 'maxLenghtNumChar1' | translate }}</p>

      <ion-item class="item2 animated fadeInDown">
        <ion-label stacked>
          Last Name
        </ion-label>
        <ion-input type="text" class="inpt" formControlName="lastname" [(ngModel)]="LastName" required></ion-input>
      </ion-item>

      <p style="color: red" class="validationHint" *ngIf="hasError('lastname', 'required')">{{ 'require' | translate }}</p>
      <p style="color: red" class="validationHint" *ngIf="hasError('lastname', 'maxlength')">{{ 'maxLenghtNumChar1' | translate }}</p>


      <ion-item class="item3 animated fadeInDown">
        <ion-label stacked>
          Email
        </ion-label>


        <ion-input type="email" class="inpt" disabled value="{{userProfile.email}}" readonly></ion-input>
      </ion-item>



      <ion-item class="item4 animated fadeInDown">

        <ion-label stacked>
          token number
        </ion-label>


        <ion-input disabled class="inpt" type="text" value="{{userProfile.token}}" readonly>
          

        </ion-input>


      </ion-item>

      <!-- <label>enter Password</label> -->
      <ion-item class="item5 animated fadeInDown">
        <ion-label stacked class="text-bold">
          Current password
        </ion-label>
        <ion-icon (click)="openPage('ChangepasswordPage')" item-end name="ios-arrow-forward-outline" class="passwordIcon"></ion-icon>
        <ion-input  placeholder="enter your password" type="password" formControlName="password" [(ngModel)]="Password" required >


        </ion-input>


      </ion-item>


      <p style="color: red" class="validationHint" *ngIf="hasError('password', 'required')">{{ 'require' | translate }}</p>
    

    </ion-list>



    <button ion-button block type="submit"
    [disabled]="!myForm.valid"
    class="sub  fixed-botomr app-white app-btn-revese animated fadeInDown">save</button>

  </form>


</ion-content>
